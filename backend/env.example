# ========================================
# AAHARNET.AI Backend Configuration
# ========================================
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env in the backend directory
# 2. Fill in your Firebase credentials (REQUIRED)
# 3. Optional: Add API keys for enhanced features
# 4. Start backend: python main.py
#
# ========================================

# ========================================
# üî• FIREBASE CONFIGURATION (REQUIRED)
# ========================================
# 
# Option 1: Use service account JSON file (RECOMMENDED)
# Download from: Firebase Console > Project Settings > Service Accounts
# Place the JSON file in backend/config/ folder
FIREBASE_CREDENTIALS_PATH=config/serviceAccountKey.json

# Option 2: Use inline JSON credentials (Alternative)
# If you prefer inline credentials, uncomment and use this instead:
# FIREBASE_CREDENTIALS={"type": "service_account", "project_id": "your-project-id", "private_key_id": "your-key-id", "private_key": "-----BEGIN PRIVATE KEY-----\nYOUR_KEY_HERE\n-----END PRIVATE KEY-----\n", "client_email": "your-email@project.iam.gserviceaccount.com", "client_id": "your-client-id", "auth_uri": "https://accounts.google.com/o/oauth2/auth", "token_uri": "https://oauth2.googleapis.com/token", "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs", "client_x509_cert_url": "https://www.googleapis.com/robot/v1/metadata/x509/your-email"}

# Firebase Project ID (REQUIRED)
FIREBASE_PROJECT_ID=your-firebase-project-id

# ========================================
# üåê APPLICATION SETTINGS
# ========================================

# Environment Mode
DEBUG=True
LOG_LEVEL=INFO

# CORS Origins (Frontend URLs that can access the API)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.vercel.app

# Server Configuration
HOST=127.0.0.1
PORT=8000

# ========================================
# üîê SECURITY SETTINGS
# ========================================

# JWT Token Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ========================================
# ü§ñ AI MODEL SETTINGS
# ========================================

# Google Gemini AI (for advanced chatbot - OPTIONAL)
# Get from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# Whisper Model Size (for voice transcription - OPTIONAL)
# Options: tiny, base, small, medium, large
WHISPER_MODEL_SIZE=base

# Chatbot Model (NLP - OPTIONAL)
# Options: microsoft/DialoGPT-small, microsoft/DialoGPT-medium, microsoft/DialoGPT-large
CHATBOT_MODEL=microsoft/DialoGPT-medium

# ========================================
# üó∫Ô∏è EXTERNAL API KEYS (OPTIONAL)
# ========================================

# OpenWeather API (for weather-based forecasting enhancement)
# Get from: https://openweathermap.org/api
OPENWEATHER_API_KEY=your_openweather_api_key

# Mapbox Token (for advanced mapping features)
# Get from: https://account.mapbox.com/access-tokens/
MAPBOX_TOKEN=your_mapbox_token

# ReliefWeb API (for disaster data)
# Get from: https://reliefweb.int/help/api
RELIEFWEB_API_KEY=your_reliefweb_api_key

# ========================================
# ‚ö° PERFORMANCE SETTINGS
# ========================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=5000

# Database Connection Pool
FIRESTORE_MAX_CONNECTIONS=100
FIRESTORE_TIMEOUT_SECONDS=30

# ========================================
# üìä ANALYTICS & MONITORING (OPTIONAL)
# ========================================

# Sentry Error Tracking
# SENTRY_DSN=your_sentry_dsn

# Google Analytics
# GOOGLE_ANALYTICS_ID=your_ga_id

# ========================================
# üß™ DEVELOPMENT SETTINGS
# ========================================

# Enable detailed error messages (set to False in production)
SHOW_ERROR_DETAILS=True

# Enable API documentation
ENABLE_DOCS=True

# Enable model caching (speeds up repeated predictions)
ENABLE_MODEL_CACHE=True

# ========================================
# üåç LOCALIZATION
# ========================================

# Default language for responses
DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
SUPPORTED_LANGUAGES=en,es,fr,hi,bn,ta,te,ml

# ========================================
# üìù NOTES
# ========================================
#
# MINIMUM REQUIRED VARIABLES:
# - FIREBASE_CREDENTIALS_PATH or FIREBASE_CREDENTIALS
# - FIREBASE_PROJECT_ID
#
# RECOMMENDED FOR PRODUCTION:
# - Set DEBUG=False
# - Set SHOW_ERROR_DETAILS=False
# - Use strong SECRET_KEY
# - Configure proper CORS_ORIGINS
# - Add Sentry or monitoring
#
# OPTIONAL FEATURES:
# - GEMINI_API_KEY: Enhanced chatbot responses
# - OPENWEATHER_API_KEY: Weather-based predictions
# - MAPBOX_TOKEN: Advanced mapping
# - RELIEFWEB_API_KEY: Disaster response data
#
# ========================================
