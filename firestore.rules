rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      // Allow read if user is authenticated and requesting their own data
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow create if user is authenticated and creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow update if user is authenticated and updating their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow delete if user is authenticated and deleting their own document
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Donations collection
    match /donations/{donationId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow create for authenticated users
      allow create: if request.auth != null;
      
      // Allow update for the creator or admins
      allow update: if request.auth != null && 
        (resource.data.donor_id == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'admin');
      
      // Allow delete for the creator or admins
      allow delete: if request.auth != null && 
        (resource.data.donor_id == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'admin');
    }
    
    // Requests collection (NGO requests)
    match /requests/{requestId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow create for authenticated users
      allow create: if request.auth != null;
      
      // Allow update for the creator or admins
      allow update: if request.auth != null && 
        (resource.data.ngo_id == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'admin');
      
      // Allow delete for the creator or admins
      allow delete: if request.auth != null && 
        (resource.data.ngo_id == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'admin');
    }
    
    // Volunteers collection
    match /volunteers/{volunteerId} {
      // Allow read for authenticated users
      allow read: if request.auth != null;
      
      // Allow create for authenticated users
      allow create: if request.auth != null;
      
      // Allow update for the volunteer or admins
      allow update: if request.auth != null && 
        (resource.data.volunteer_id == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'admin');
      
      // Allow delete for the volunteer or admins
      allow delete: if request.auth != null && 
        (resource.data.volunteer_id == request.auth.uid || 
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.user_type == 'admin');
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

